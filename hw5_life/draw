#!/usr/bin/env gnuplot

ITER = 500

# RANGE PARAMETERS
set xrange [0:100]
set yrange [0:100]

# THINK YOU SHOULDN'T TOUCH IT
ydim = 475*1.3
xdim = 500*1.3
# GRAPH SIZE
set terminal png size xdim,ydim

#POINTS PARAMETERS
point_size = 1
point_type = 5
points_color = 'black'


# DRAWING PICTURES
do for [t=0:ITER] {
	outfile = sprintf("images/%d.png",t)
	inputfile = sprintf('states/life%d.dat',t)

	set output outfile
	plot inputfile pt point_type ps point_size lc rgb points_color notitle
}
